<div id='staticModal' class='modal fade'>
    <div class="modal-dialog">
        <div id='staticModalContainer'>
            <div class="model-panel panel">
                <div class="panel-heading">
                    <h4 style="color:#000; text-align: center;">CẤU HÌNH MÀN HÌNH</h4>
                </div>
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="form-group" style="font-size: 12px;">
                            <label for="txtleft" style="font-size: 16px; font-weight: normal; color:#000;">Cột trái</label>
                            @Html.DropDownList("txtleft", ViewBag.ListKP as IEnumerable<SelectListItem>, new { @class = "form-control" })
                        </div>
                        <div class="form-group" style="font-size: 12px;">
                            <label for="txtright" style="font-size: 16px; font-weight: normal; color:#000;">Cột phải</label>
                            @Html.DropDownList("txtright", ViewBag.ListKP as IEnumerable<SelectListItem>, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12" style="font-size: 12px;">
                        <button class="btn btn-default" data-dismiss="modal">Thoát</button>
                        <button type="button" class="btn btn-primary" id="submit">Lưu cấu hình</button><span class="message" style="color:#000;"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var currentLeftIndex = $("input[name='for-left']").val();
        var currentRightIndex = $("input[name='for-right']").val();

        console.log(currentLeftIndex + "-" + currentRightIndex);

        $('#txtleft').val(currentLeftIndex);
        $('#txtright').val(currentRightIndex);

        $("#submit").click(function () {
            var left = $("#txtleft").find('option:selected').val();
            var left_text = $("#txtleft").find('option:selected').text();

            var right = $("#txtright").find('option:selected').val();
            var right_text = $("#txtright").find('option:selected').text();

            $("input[name='for-left']").val(left);
            $("input[name='for-right']").val(right);

            $("#col-left .title-box").html(left_text);
            $("#col-right .title-box").html(right_text);

            $(".message").html("Thành công");
        });
    });
</script>
<style type="text/css">
    #sknv_table_wrapper .row:first-child { display: none; }
    #sknv_table_wrapper .sorting,
    #sknv_table_wrapper .sorting:after,
    #sknv_table_wrapper .sorting:before { padding-right: 5px !important; content: ''; }
</style>
<table class="table table-bordered table-condensed" id="sknv_table">
    <thead>
        <tr>
            <th class="text-center" width="30">STT</th>
            <th width="50">Mã NV</th>
            <th>Họ tên</th>
            <th>Khoa/Phòng</th>
            <th class="text-center">Năm trước</th>
            <th class="text-center">Hiện tại</th>
            <th>Kết luận diễn tiến</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model as IEnumerable<System.App.Entities.HCNS.TDSK>)
        {
        <tr>
            <td>@o.STT</td>
            <td>@o.MaNV</td>
            <td>@o.HoTen</td>
            <td>@o.KhoaPhong</td>
            <td>@o.LYear</td>
            <td>@o.CYear</td>
            <td>@o.DienTien</td>
        </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(function () {
        $('#sknv_table').callDataTableCustomSearchPage('vi', '', '#sknv_filter', 15);
    });
</script>
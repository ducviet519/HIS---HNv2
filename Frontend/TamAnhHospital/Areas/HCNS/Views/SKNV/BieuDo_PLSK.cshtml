@{
    ViewBag.Title = "Lưu lượng khám PK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .search-box { padding: 15px; }
    .canvasjs-chart-credit { display: none !important; }
</style>
<div class="search-box">
    <div class="row">
        <div class="col-md-2 col-xs-2">
            <div class="form-group">
                <label>Năm</label>
                <select class="form-control" id="nam" name="nam">
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019" selected>2019</option>
                </select>
            </div>
        </div>
        <div class="col-md-1 col-xs-1">
            <input type="button" class="btn btn-primary" id="btnSearch" value="Tìm kiếm" style="margin-top: 25px;" />
        </div>
    </div>

    <div class="row" style="border-top: 1px solid #ddd;">
        <div class="col-md-12 col-xs-12">
            <div id="boxContent" style="width: 98%; margin: 15px auto; position: relative; overflow: hidden;"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnSearch").click(function () {
            var val = $("[name='nam']").val();
            $("#boxContent").load("/hcns/sknv/BieuDo_PLSK_Table?nam=" + val);
        });
    });
</script>
<div id='staticModal' class='modal fade'>
    <div class="modal-dialog" style="width: 500px;">
        <div id='staticModalContainer'>
            <div class="model-panel panel">
                <div class="panel-heading">
                    <h5><i class="fa fa-list"></i> Thêm mới danh mục bằng cấp</h5>
                    <a href="javascript:;" data-dismiss="modal" class="btnCloseModal"><i class="fa fa-close"></i></a>
                </div><!-- ./panel-heading -->
                <div class="panel-body form">
                    <div class="form-row">
                        <div class="form-group col-md-2">
                        </div>
                        <div class="form-group col-md-8">
                            <label>Tên bằng cấp</label>
                            @Html.TextBox("cre_bc_ten", "", new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group col-md-2">
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-center">
                    <button type="button" class="btn btn-sm btn-primary" id="cre_bc_btnCreate">Thêm</button>
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $(".chosen-ddl").chosen();

        $("#cre_bc_btnCreate").click(function (e) {
            var _RName = $("#cre_bc_ten").val();
            if (_RName == '') {
                $(this).callToast("error", 'Chưa nhập bằng cấp', '');
                return;
            }

            var obj = {
                "RName": _RName,
            };
            $.ajax({
                url: '@Url.Action("AddNew_BangCap", "DanhMuc")',
                type: 'POST',
                cache: false,
                contentType: "application/json",
                data: JSON.stringify(obj)
            }).success(function (data) {
                if (data.result == true) {
                    $(this).callToast("success", 'Tạo thành công.', data.message);
                    $(".btnCloseModal").focus().click();
                    Load_Data();
                } else {
                    $(this).callToast("error", 'Tên bằng cấp đã tồn tại', data.message);
                }
            });
            e.preventDefault();
        });
    });
</script>